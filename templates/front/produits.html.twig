{% extends "layout.html.twig" %}

{% set active = 'produits' %}

{% block title %}
    Produits
{% endblock %}

{% block content %}

    <div style="width: 90%;margin: 20px auto;">

        <h2>Produits référencés :</h2>

        <table class="table">
            <thead>
            <tr>
                <th scope="col">Nom</th>
                <th scope="col">Prix</th>
                <th scope="col">Description</th>
                <th scope="col">Fournisseur</th>
            </tr>
            </thead>
            <tbody>
            {% for produit in produits %}
                <tr>
                    <th scope="row">
                        <a href="{{ path('product_details', {'id':produit.id}) }}">{{ produit.nom }}</a>
                    </th>
                    <td>{{ produit.prix }}€</td>
                    <td>{{ produit.description }}</td>
                    <td>
                        <a href="{{ path('fournisseur_details', {'id':produit.fournisseur.id}) }}">{{ produit.fournisseur.nom }}</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
